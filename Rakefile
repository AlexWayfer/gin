# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.spec 'gin' do
  developer('Jeremie Castagna', 'yaksnrainbows@gmail.com')
  self.readme_file      = "README.rdoc"
  self.history_file     = "History.rdoc"
